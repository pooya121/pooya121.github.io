{
  "name": "pooya-resume",
  "description": "pooya's static resume",
  "author": "Pooya Badiee",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev -p 3005\"  \"npm run tsm:watch\" --raw",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "tsm:watch": "tsm src -w -L silent",
    "fix": "concurrently \"eslint --fix src\" \"prettier --write src\"",
    "lint": "concurrently \"eslint src\" \"prettier src\""
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "10.0.7",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^2.0.1",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "typed-scss-modules": "^4.1.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,scss,sass,css,md}": "prettier --write"
  }
}
